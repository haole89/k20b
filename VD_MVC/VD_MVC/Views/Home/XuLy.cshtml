@model VD_MVC.Models.KhachMoi
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Endyear party</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
   
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Thông tin khách mời</h4></div>
        <div class="panel-body">
           
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Your name:</label>
                    @Html.TextBoxFor(x=>x.HoTen, new { @class="form-control"})
                </div>
                <div class="form-group">
                    <label>Your email:</label>
                    @Html.TextBoxFor(x=>x.Email , new { @class="form-control"})
                </div>
                <div class="form-group">
                    <label>Your phone:</label>
                    @Html.TextBoxFor(x=>x.SDT, new { @class="form-control"})
                </div>
                <div class="form-group">
                    <label>Will you attend?</label>
                    @Html.DropDownListFor(x=>x.ThamDu, new []
               {
                   new SelectListItem() {Text =" Có, tôi sẽ đến", Value=bool.TrueString},
                   new SelectListItem() {Text = "Không, tôi bận", Value = bool.FalseString}

               }, new { @class="form-control"})
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Gửi xác nhận" />
                </div>
            }
        </div>
    </div>


</body>
</html>